<div class="profile-contanier">
  <div class="form-profile">
    <h2 class="text-center titile-profile">Informatin User</h2>
    <form method="post" id="form-information">
      <div class="form-group">

        <div class="form-row mt-5">
          <div class="col mr-5">
            <label for="firstname">First Name</label>
            <input type="text" class="form-control input-login" id="firstname" name="firstname" value="{{inforuser.[0].firstname}}">
          </div>
          <div class="col ml-5">
            <label for="lastname">Last Name</label>
            <input type="text" class="form-control input-login" id="lastname" name="lastname" value="{{inforuser.[0].lastname}}">
          </div>
        </div>

        <div class="form-row mt-3">
          <div class="col mr-5">
            <label for="email">Email</label>
            <input type="email" class="form-control input-login" id="email" name="email" placeholder="admin@gmail.com"
              value="{{inforuser.[0].email}}">
          </div>
          <div class="col ml-5">
            <label for="mssv">MSSV</label>
            <input type="text" class="form-control input-login" id="mssv" name="mssv" value="{{inforuser.[0].mssv}}">
          </div>
        </div>

        <div class="form-group mt-3 ">
          <label for="inputAddress">Address </label>
          <input type="text" class="form-control input-login" id="inputAddress" placeholder="Apartment, studio, or floor"
            name="address" value="{{inforuser.[0].address}}">
        </div>

        <div class="form-row mt-3 d-flex justify-content-between">
          <div class="form-group col-md-4 ">
            <label for="university">University</label>
            <input type="text" class="form-control input-login" id="university" name="university"
              value="{{inforuser.[0].university}}">
          </div>
          <div class="form-group col-md-3 ">
            <label for="academy">Academy:</label>
            <input type="text" class="form-control input-login" id="academy" name="academy" value="{{inforuser.[0].academy}}">
          </div>
          <div class="form-group col-md-2">
            <label for="course">Course:</label>
            <input type="text" class="form-control input-login" id="course" name="course" value="{{inforuser.[0].course}}">
          </div>
        </div>

        <div class="d-flex justify-content-around">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirm"
            data-mssv="{{inforuser.[0].mssv}}">Update</button>
        </div>

      </div>
    </form>
  </div>

</div>

<!-----Modal confirm------------>

<div class="modal fade" id="confirm" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Update</h5>
      </div>
      <div class="modal-body">
        <p>Do you want to update information?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="update-course">Updtae</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {

    var mssv;
    var btnUpdateInfor = document.getElementById("update-course");
    var formUpdateInfor = document.getElementById("form-information");

    $('#confirm').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget)
      mssv = button.data('mssv')

    });

    btnUpdateInfor.onclick = function () {
      formUpdateInfor.action = "/me/profile/update/" + mssv + "?_method=PUT";
      formUpdateInfor.submit();
    }
  });
</script>