<div class="mt-4">
    <div class="row">
        {{#each course}}
            <div class="col-sm-3 my-3 card">
                <a href="/course/{{this.type}}/{{this.slug}}" class="click-a">
                    <img src="{{this.imga}}" class="card-img-top" alt="{{this.imga}}"> 
                </a>
               
                <div class="card-body">
                    <a href="/course/{{this.type}}/{{this.slug}}" class="click-a>
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                </div>

                <a href="#" class="btn btn-primary mt-0">Buy Course</a>
            </div>
        {{/each}}

    </div>
</div>